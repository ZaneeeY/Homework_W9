{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Population Distribution from 1970 to 2020",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W9/main/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "params": [
      {
        "name": "year_selection",
        "bind": {
          "input": "select",
          "options": [
            "2020",
            "2010",
            "2000",
            "1990",
            "1980",
            "1970"
          ],
          "labels": [
            "2020",
            "2010",
            "2000",
            "1990",
            "1980",
            "1970"
          ],
          "name": "Year Selection: "
        }
      }
    ],
  
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
            "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W9/main/js/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
            "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W9/main/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
          "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W9/main/data/world_population.csv"
              },
              "key": "Country",
              "fields": ["2020 Population", "2010 Population", "2000 Population", "1990 Population", "1980 Population", "1970 Population", "Capital", "Rank"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "condition": [
              { "test": "year_selection == '2020'", "field": "2020 Population" },
              { "test": "year_selection == '2010'", "field": "2010 Population" },
              { "test": "year_selection == '2000'", "field": "2000 Population" },
              { "test": "year_selection == '1990'", "field": "1990 Population" },
              { "test": "year_selection == '1980'", "field": "1980 Population" },
              { "test": "year_selection == '1970'", "field": "1970 Population" }
            ],
            "field": "2020 Population",
           
            "title": "Country Population",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "domain": [100000, 1000000, 10000000, 100000000, 1000000000],
              "range": ["#efedf5", "#cbc9e0", "#bcbddc", "#726cac"]
            }
          },
  
          "tooltip": [
            {"field": "Rank", "type": "nominal", "title": "Rank"},
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Capital", "type": "nominal", "title": "Capital"},
            {"field": "2020 Population", "type": "quantitative", "format": ","},
            {"field": "2000 Population", "type": "quantitative", "format": ","},
            {"field": "1990 Population", "type": "quantitative", "format": ","},
            {"field": "1980 Population", "type": "quantitative", "format": ","},
            {"field": "1970 Population", "type": "quantitative", "format": ","}
          ]
        }
      }
    ],
    "config": {}
  }